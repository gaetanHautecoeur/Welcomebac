{% extends 'WelcomebacPublicBundle::layout.html.twig' %}

{% block leftcontent %}
	<p>
		Retrouvez l'intégralité des quiz des séries scientifiques, économique et sociale, et littéraire sur Welcomebac et profitez de tous ces contenus gratuits !
	</p>
{% endblock %}

{% block centercontent %}
	<div style="text-align:center;font-size:16pt;">QUIZ</div>
	<ul id="liste">
		<li>
			<h1>
				<a href="" id="serie_s">
					Série Scientifique
				</a>
			</h1>
			<ul>
				{% for matiere in matieresS %}
				<li><a href="{{ path('WelcomebacPublicBundle_quizSerieMatiere',{'serie':matiere.serie, 'matiere':matiere.nom})}}">{{ matiere.nom }}</a></li>
				{% endfor %}
			</ul>
		</li>
		<li>
			<h1>
				<a href="" id="serie_es">
					Série Economique et Sociale
				</a>
			</h1>
			<ul>
				{% for matiere in matieresE %}
				<li><a href="">{{ matiere.nom }}</a></li>
				{% endfor %}
			</ul>
		</li>
		<li>
			<h1>
				<a href="" id="serie_l">
					Série Littéraire
				</a>
			</h1>
			<ul>
				{% for matiere in matieresL %}
				<li><a href="">{{ matiere.nom }}</a></li>
				{% endfor %}
			</ul>
		</li>
	</ul>
{% endblock %}